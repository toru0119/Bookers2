
<%= render'books/list',{book:@book, user:@user} %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
         <td>
           <%= link_to user_path(@user.id) do %>
           <%= attachment_image_tag @user, :profile_image,:saiz, "40x40", format: 'jpeg', fallback: "no_image.jpg" %><br>
           <%= @user.name %>
           <% end %>
         </td>
         <td>
           <%= link_to book_path(@books.id) do %>
           <%= @books.title %>
           <% end %>
         </td>
         <td>
           <%= @books.body %>
         </td>
         <% if @books.user == current_user %>
         <td>
           <%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %>
         </td>
         <td>
           <%= link_to "Destroy", book_path(@books), method: :delete, class: "btn btn-sm btn-danger" %>
         </td>
         <% end %>
      </tr>
    </tbody>
  </table>
</div>
